{
  "name": "ui",
  "version": "1.0.0",
  "description": "The Rete Academy User Interface library",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf ./packages/*/dist",
    "build": "tsc --build",
    "lint": "eslint . -f codeframe",
    "pretest": "yarn build && yarn lint",
    "test": "yarn test:unit",
    "test:unit": "mocha \"packages/*/dist/test/**/*.spec.js\" --enable-source-maps",
    "start": "yarn start:client",
    "start:client": "yarn workspace @sample/app start",
    "start:server": "yarn workspace @sample/server start",
    "prettify": "npx prettier . --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rete-academy/ui.git"
  },
  "author": "Rete Academy volunteers",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rete-academy/ui/issues"
  },
  "homepage": "https://github.com/rete-academy/ui#readme",
  "devDependencies": {
    "eslint": "^7.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "lerna": "^3.22.1",
    "vite": "^1.0.0-rc.13"
  }
}
