{
    "include": [
        "packages/**/*.ts",
        "packages/**/*.tsx"
    ],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "allowJs": true,
        "jsx": "react",
        "lib": ["dom", "esnext"]
    }
}
